{
    "name": "govcy-design-system",
    "version": "2.1.1",
    "description": "",
    "main": "index.html",
    "author": "DMRID - DSF Team",
    "license": "MIT",
    "sasslintConfig": "test/config/.sasslintrc",
    "scripts": {
        "build-all": "npm run js-build && npm run css-build && npm run css-build-distribution && npm run js-build-distribution",

        "css-build": "sass --no-source-map --load-path=node_modules src/sass/main.scss build/css/main.css",
        "css-build-distribution": "sass --no-source-map src/sass/main.scss dist/css/main.min.css --style compressed",
        "css-watch": "npm run css-build -- --watch",

        "js-build": "uglifyjs src/js/govcy-typeahead.js src/js/govcy-mobile-OTP.js src/js/accessible-autocomplete.js -c drop_debugger=false -m -o build/js/app.min.js",
        "js-build-distribution": "uglifyjs src/js/govcy-typeahead.js src/js/govcy-mobile-OTP.js src/js/accessible-autocomplete.js -c -m -o dist/js/app.min.js",
        "js-watch": "fswatch -or src/js| xargs -n1 -I{} npm run js-build",
    
        "test-percy": "percy exec -- mocha --recursive --exit",
        "es-lint": "eslint src/js/*.js",
        "sass-lint": "sass-lint -v",
        
        "start": "http-server -c-1 -p 3000 -o build/"
    },
    "dependencies": {
        "bootstrap": "^5.1.3",
        "minimist": "^1.2.6",
        "sass": "^1.43.4"
    },
    "devDependencies": {
        "@percy/cli": "^1.0.0-beta.75",
        "@percy/puppeteer": "^2.0.0",
        "copyfiles": "^2.4.1",
        "eslint": "^8.22.0",
        "http-server": "^13.0.2",
        "mocha": "^9.2.0",
        "puppeteer": "13.2.0",
        "sass-lint": "^1.13.0",
        "uglify-js": "^3.17.0"
    },
    "overrides": {
        "@percy/puppeteer": {
            "node-fetch": ">=2.6.7"
        },
        "ansi-regex": "^5.0.1",
        "minimist": "^1.2.6",
        "sass-lint": {
            "merge": "^2.1.1",
            "gonzales-pe-sl": {
                "minimist": "^1.2.6"
            },
            "eslint": {
                "shelljs": "0.8.5",
                "table": {
                    "ajv": ">=6.12.3"
                }
            }
        }
    }
}
