{
    "name": "gov-cy-dsf-design-system",
    "version": "0.0.1",
    "description": "",
    "main": "index.html",
    "author": "Constantinos Evangelou",
    "license": "MIT",
    "scripts": {
        "css-build": "node-sass --omit-source-map-url sass/main.scss docs/css/main.css",
        "css-build-min": "node-sass --omit-source-map-url sass/main.scss docs/css/main.min.css --output-style compressed",
        "css-watch": "npm run css-build -- --watch",
        "css-start": "npm run css-watch",
        "css-purgecss": "purgecss --css docs/css/main.min.css --content docs/index.html --output docs/css/dist/",
        "start": "http-server -c-1 -p 8081 -o docs/"
    },
    "dependencies": {
        "bootstrap": "5.1.3",
        "http-server": "^13.0.2",
        "node-sass": "^6.0.1",
        "purgecss": "^4.0.3"
    }
}
