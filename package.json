{
    "name": "govcy-design-system",
    "version": "1.3.1",
    "description": "",
    "main": "index.html",
    "author": "DMRID - DSF Team",
    "license": "MIT",
    "sasslintConfig": "test/config/.sasslintrc",
    "scripts": {
        "build-all": "npm run css-build && npm run css-build-distribution",
        "css-build": "copyfiles -u 2 src/js/app.js build/js && sass --no-source-map --load-path=node_modules src/sass/main.scss build/css/main.css",
        "css-build-distribution": "sass --no-source-map src/sass/main.scss dist/css/main.min.css --style compressed",
        "css-watch": "npm run css-build -- --watch",
        "css-start": "npm run css-watch",
        "sass-lint": "sass-lint -v",
        "watch-css": "npm run css-watch",
        "test-percy": "percy exec -- mocha --recursive --exit",
        "start": "http-server -c-1 -p 3000 -o build/"
    },
    "dependencies": {
        "bootstrap": "^5.1.3",
        "sass": "^1.43.4"
    },
    "devDependencies": {
        "@percy/cli": "^1.0.0-beta.75",
        "@percy/puppeteer": "^2.0.0",
        "copyfiles": "^2.4.1",
        "http-server": "^13.0.2",
        "mocha": "^9.2.0",
        "puppeteer": "13.2.0",
        "sass-lint": "^1.13.0"
    },
    "overrides": {
        "@percy/puppeteer": {
            "node-fetch": ">=2.6.7"
        },
        "ansi-regex": "^5.0.1",
        "sass-lint": {
            "merge": "^2.1.1",
            "gonzales-pe-sl": {
                "minimist": ">=1.2.3"
            },
            "eslint": {
                "shelljs": "0.8.5",
                "table": {
                    "ajv": ">=6.12.3"
                }
            }
        }
    }
}
